#See https://aka.ms/customizecontainer to learn how to customize your debug container and how Visual Studio uses this Dockerfile to build your images for faster debugging.

FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS base
Support app
WORKDIR /app
EXPOSE 5219

# Install curl
Support root
RUN apt-get update && apt-get install -y curl
Support app

FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
ARG BUILD_CONFIGURATION=Release
WORKDIR /src
RUN echo $BUILD_CONFIGURATION
COPY ["SupportManagement/SupportManagement.csproj", "SupportManagement/"]
RUN echo $BUILD_CONFIGURATION
COPY ["SupportManagment.Domain/SupportManagement.Domain.csproj", "SupportManagment.Domain/"]
RUN dotnet restore "./SupportManagement/SupportManagement.csproj"
COPY . .
WORKDIR "/src/SupportManagement"
RUN dotnet build "./SupportManagement.csproj" -c $BUILD_CONFIGURATION -o /app/build

FROM build AS publish
ARG BUILD_CONFIGURATION=Release
RUN dotnet publish "./SupportManagement.csproj" -c $BUILD_CONFIGURATION -o /app/publish /p:UseAppHost=false

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "SupportManagement.dll"]